.user-share{
	padding: 10rpx 0;
	background:#ffffff;
	text-align: center;
}
.user-share .tip-box{
  position: absolute;
  right: 0;
  bottom: 50rpx;
}
.user-share .money{
	font-size: 30rpx;
	color: gold;
}
.user-share .money span{
	font-size: 50rpx;
  line-height: 70rpx;
}
.user-share .get{
	font-size: 30rpx;
  line-height: 70rpx;
}
.user-share .button{
	bottom:10px;
	width: 90%;
	margin-top:10px;
	margin-bottom:6px;
	font-size: 30rpx;
    height: 76rpx;
    line-height: 76rpx;
    color:#ffffff;
    background:#e54848;
    border-radius:6rpx;
	border-bottom:1px solid #e54848;
}
.user-share .button:not(.disabled):not(:disabled):active{
	color:#fff0f0;
	background:#f52f30;
	background-clip: padding-box;
}
.ui-col{width: 50%;float: left;}

.wst-share-tips{text-align:right;color:#FF0036;font-size:28rpx;}
.wst-share-tips image{width:18px;height:18px;vertical-align:middle;position:relative;cursor:pointer;}
.share-tip{position: fixed;bottom: 0;width: 100%;height: 400rpx;background-color: #fff;box-shadow:0 0 20px #999;z-index: 10000;}

.share-tip .title{font-size: 30rpx;text-align: center;height: 100rpx;line-height: 100rpx;background-color:#f7f7f8;position: relative;}
.share-tip .close{height: 100rpx;line-height: 100rpx;color: #999;padding: 0 20rpx;position: absolute;right: 0;top: 0;font-size: 40rpx;}
.share-tip .share-content{width: 100%;height: 180rpx;}
.share-tip .share-content .item{line-height: 60rpx;padding:20rpx 30rpx;border-top:1rpx solid #e5e5e5;}