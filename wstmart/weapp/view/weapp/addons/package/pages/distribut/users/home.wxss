page{background-color: #f5f5f5;}
.wst-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.wst-flex-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.wst-container{
  border-top:0;
}
.wst-us-user{
  height: calc(100vw*0.4);
  display: flex;
}
.wst-us-user .img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  margin-left:50rpx;
  align-self: center;
  margin-right:0;
}
.wst-us-user .info{
  padding-left:20rpx;
  align-self: center;
  color: #fff;
  position: relative;
}
.wst-us-user .info image {
margin-left: 10rpx;
margin-top: 7rpx;
width: 30rpx;
height: 30rpx;

}
.wst-us-user .info .rkname{
  font-size: 26rpx;
}
.wst-us-user .info .name{
  font-family: PingFang-SC-Bold;
}
.wst-us-user .info .binding{
  padding-left:14px;
  font-family: PingFang-SC-Bold;
  text-decoration:underline;
  border:0;
  color: #fff;
  font-size:28rpx;
}

.user-share{
	padding: 20rpx;
	background:#ffffff;
	text-align: center;
  
}
.user-share .money{
	font-size: 30rpx;
	color: gold;
}
.user-share .money text{
	font-size: 50rpx;
}
.user-share .get{
	font-size: 30rpx;
}
.user-share .button{
	margin: 10px;
	margin-bottom:12px;
	font-size: 33rpx;
    height: 76rpx;
    line-height: 76rpx;
    color:#ffffff;
    background:#fd5757;
    border-radius:6rpx;
}
.user-share .button:not(.disabled):not(:disabled):active{
	opacity: 0.8;
}


.container{
  width: 100%;
  height: auto;
  margin-top: 20rpx;
}
.main-model{
  width: 100%;
  height: 46rpx;
  line-height:46rpx;
  padding:30rpx 20rpx;
  background: white;
  border-bottom: 1rpx solid #edebeb;
}
.between{
  width: auto;
  float: left;
  margin-left: 10rpx;
  font-size: 28rpx;
}
.right{
  width: 60rpx;
  float: right;
  margin-right:20rpx;

}
.right .arrow{
  width:20rpx;
  height:20rpx;
  border-right:1rpx solid #b7b7b7;
  border-bottom:1rpx solid #b7b7b7;
  margin-top:15rpx;
  transform:rotate(-45deg);

}


#qrcodes{position: relative;width: 600rpx;height: 1050rpx;}
.shareImg{width: 600rpx;height: 1050rpx;}
.bottom{
  display: flex;
  justify-content: flex-start;
}
.bottom .left{
  margin-top: 13px;
  font-size: 26rpx;
  color: #2196F3;
}