.container {
  height: 100vh;
  width: 100vw;
  background: #fff;
}

.chat-list {
  height: 100%;
  width: 100%;
  background: #fff;
}

.chat-item{
  display: flex;
  flex-direction: row;
  width: 96%;
  padding: 2%;
  border-bottom: 1px solid #eee;
}

.item-left{
  width:20%;
  position: relative;
}

.item-left image{
  width: 100rpx;
  height: 100rpx;
}

.un-read-num{
  width:20px;
  height:20px;
  line-height: 20px;
  background: #df0202;
  border-radius: 20px;
  color:#fff;
  position: absolute;
  top:-7px;
  left: 40px;
  font-size: 13px;
  text-align: center;
}

.item-right{
  width:80%;
  height:100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-right-top{
  height:40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.item-right-bottom{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.chat-name{
  color:#333;
}

.chat-time{
  color:#333;
}

.chat-content{
  font-size:12px;
  color:#999;
}

.empty{
  width:100%;
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.empty-image{
  width:300rpx;
  height:300rpx;
}
.empty-text{
  color:#999;
  margin-top:10px;
}
.offline{
  filter: grayscale(100%); 
  /* filter: gray;  */
}