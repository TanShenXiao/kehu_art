.wst-login-head{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  white-space:nowrap;
  background:white;
  border-top:  1rpx solid #f6f6f8;
  z-index: 1000;
  height:76rpx;

}
.wst-login-head .term{
  display: inline-block;
  width: 50%;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 30rpx;
  text-align: center;
}
.wst-login-head .active{
  color: #e50e0f;
  border-bottom:  4rpx solid #e50e0f;
}
.login-item .obtain {
	width:300rpx;
	height:72rpx;
	line-height:72rpx;
	color: #ff3c3c;
	font-size: 30rpx;
	border-color: #0baae4;
	background-color: #fff;
	border-radius:4rpx;
	border: 2rpx solid #ff3c3c;
}
.login-item .obtain:active,.login-item .obtain[disabled][type="default"],.login-item .obtain[disabled]:not([type]) {
	background: #fff;
	color:#df0202;
	border:2rpx solid #df0202;
	background-clip:padding-box;
}
.login-item .obtain::after{
  -webkit-transform:scale(0);
  transform:scale(0);
}