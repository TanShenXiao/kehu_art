page{
  background-color:#fff;
}
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.login-model{
  margin-top:76rpx;
}
.form-model{
  margin:0 60rpx;
  margin-top: 16rpx;
  padding: 24rpx 0 4rpx 0;
  background: #fff;
  overflow: hidden;
}
.login-item{
  display: flex;
  height: 76rpx;
  font-size:29rpx;
  padding: 10rpx 0;
  position: relative;
}
.login-item:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: -50%;
  width: 200%;
  height: 2rpx;
  background: #eaeaea;
}
.login-item input{
  width: 100%;
  padding:0 10rpx;
  height: 76rpx;
  line-height: 76rpx;
}
.login-item .verify{
  width: 320rpx;
  height: 76rpx;
}
.log-model{
  height: 90rpx;
  padding: 0 60rpx 0 60rpx;
}
.lo-button{
  height:80rpx;
