page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  background-color:#fff;
}
.form-model{
  margin:0 60rpx;
  padding: 24rpx 0 4rpx 0;
  background: #fff;
  overflow: hidden;
}
.login-model{
}
.login-item{
  display: flex;
  height: 76rpx;
  font-size:29rpx;
  padding: 10rpx 0;
  position: relative;
  border-bottom:1rpx solid #d9d9d9;
}
.login-item input{
  width: 100%;
  padding:0 10rpx;
  height: 72rpx;
  line-height: 72rpx;
}
.login-item .verify{
  width: 320rpx;
  height: 72rpx;
}
.log-model{
  margin-top: 40rpx;
  height: 80rpx;
  margin: 0 60rpx;
}
.lo-button{
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: #ff3c3c;
  color: white;
  border-radius: 6rpx;
  font-size:30rpx;
  margin-top:30px;
}
.lo-button:active,.lo-button[disabled][type="default"],.lo-button[disabled]:not([type]){
  color:#fff0f0;
  background:#ff3c3c;
  background-clip:padding-box;
}
.login-item .obtain{
  width:300rpx;
  height:72rpx;
  line-height:72rpx;
  color: #ff3c3c;
  font-size: 30rpx;
  border-color: #ff3c3c;
  background-color: #fff;
  border-radius:4rpx;
}
.login-item .obtain:active,.login-item .obtain[disabled][type="default"],.login-item .obtain[disabled]:not([type]){
  background: #fff;
  border-color: #ff3c3c;
  color: #ff3c3c;
  background-clip:padding-box;
}

.forget-type{
  background: #fff;
  padding:10px;
  border-bottom:1px solid #d9d9d9;
}