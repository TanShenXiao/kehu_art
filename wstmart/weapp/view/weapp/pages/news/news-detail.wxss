@import "../common/parse/parse.wxss";
page{
  width: 100vw;
  background: #F6F6F8;
}
.wst-container{
  width: 100vw;
}
.wst-main{
  width: 100%;
  height: 100%;
  margin-top: 30rpx;
}
.wst-main .time{
  width: 98%;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 30rpx;
  text-align: right;
  padding-right: 50rpx;
}
.wst-main .wst-border{
  width: 100%;
  height: 100%;
  margin-top: 5rpx;
}
.wst-main .title{
  width: 100%;
  height: 80rpx;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 80rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.wst-main .wst-border .text{
  width: 100%;
  height: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  margin-left: 60rpx;
  line-height: 45rpx;
  margin-bottom: 15rpx;
}
.detailBox .icon{
  padding: 10rpx;
  display: flex;
  justify-content: flex-end;
}
.like-model{
  width: 100vw;
  height: 60rpx;
  display: flex;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  justify-content: center;
  align-content: center;
}
.like-model .box{
  width: 200rpx;
  height: 60rpx;
  display: flex;
  font-size: 30rpx;
  border-radius:20rpx; 
  justify-content: flex-start;
  align-items: center;
  line-height: 80rpx;
  color:red;
  border: 1rpx solid red;
}
.like-model .box text{
  display: block;
  padding-top: 3rpx;
  padding-left: 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.like-model .box .image{
  width: 50%;
   display: flex;
  justify-content: flex-end;
}
.like-model .box image{
  width: 40rpx;
  height: 40rpx;
}
::-webkit-scrollbar{
  height: 0;
  width: 0;
}
.detailBox{
  width: 100vw;
}
.main{
  width: 97vw;
  padding: 10rpx;
}
.remind-box{
  width: 100vw;
  height: 50vw;
  margin-top: 40vw;
  font-size: 32rpx;
  text-align: center;
  color: #222;
}