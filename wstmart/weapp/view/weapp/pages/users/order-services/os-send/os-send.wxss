page {
    width: 100%;
    height: 100%;
    background: #f6f6f8;
}
  
.container {
    width: 100%;
    height: auto;
}
.item{
    background: #fff;
    display: flex;
    margin-top: 10px;
    padding:10px 5px;
    font-size: 30rpx;
    align-items: center;
}

.express-type{
    display: flex;
    align-items: center;
    margin-left: 10px;
}
.express-type icon{
    margin:0 5px;
}
.item-content{
    display: flex;
    align-items: center;
}
.item-input{
    margin-left:5px;
}
.item-picker{
    margin-left: 10px;
    display: flex;
    align-items: center;
    border: 1px solid #ccc;
    min-width: 80px;
    padding: 5px;
    justify-content: space-between;
}
.btn{
    padding: 10px;
    margin: 10px;
    text-align: center;
    background: #d82a2e;
    color: #fff;
    border-radius: 6px;
    margin-top: 25px;
}