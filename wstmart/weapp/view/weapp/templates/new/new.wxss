/*新闻*/
.new-model{
  width: 100%;
  background: #fff;
}
.new-title{display: flex;flex-direction: row;justify-content: space-between;padding:5px;}
.new-title-text{font-weight: bold;color:#000;font-size:32rpx;}
.wst-omit{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  padding: 4rpx 6rpx 4rpx 6rpx;
  line-height: 40rpx;
}
.wst-box{
  width: 100%;
  height:280rpx;
  margin-top: 6px;
  background: white;
}
.wst-box .wst-top{
  width:100%;
  height: 86%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.wst-box .wst-image{
  width: 30%;
  height: 90%;
  margin: 8rpx;
   
}
.wst-box .wst-image image{
  width: 100%;
  height: 100%;
   
}
.wst-box .wst-content{
  width: 70%;
  height: 90%;
}
.wst-box .wst-content .wst-cont-top{
  font-size: 36rpx;
  font-weight: bold;
  line-height: 46rpx;
}
.wst-box .wst-content .wst-cont-bot{
  color: #999;
  -webkit-line-clamp: 3;
  font-size: 30rpx;
}
.wst-bottom{
  color: #999;
  font-size: 24rpx;
   padding: 0 8rpx 0 8rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.wst-box-3{
  width: 100vw;
  height: 500rpx;
  }
.wst-box-3 .wst-top-3{
  line-height: 46rpx;
  width: 100%;
  height: 91%;
   padding-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
} 
.wst-box-3 .wst-top-3 .wst-content-3{
  width: 100%;
  height: 22%;
}
.wst-box-3 .wst-image-3{
  width: 99.8%;
  height: 76%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.wst-box-3 .wst-image-3 image{
  width: 99%;
  height:100%;
}
.remind-box{
  width: 100vw;
  height: 50vw;
  margin-top: 40vw;
  font-size: 32rpx;
  text-align: center;
  color: #222;
}