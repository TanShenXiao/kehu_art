/*多店铺*/
.shop-model{
  width: 100%;
  background: #fff;
}

.shop-title{text-align: center;padding:5px 0;}
.current-location{display: flex;flex-direction: row;align-items: center;background: #f2f2f2;padding:5px;}
.location-text{font-size:26rpx;}
.location-icon{width:13px;height:17px;margin-right:5px;}
.shop-desc{width: 100%;height:40rpx;font-size: 26rpx;overflow: hidden; text-overflow: ellipsis;white-space: nowrap;}
.shop-address-content{width:100%;}
.shop-address{width: 85%;font-size: 26rpx;overflow: hidden; text-overflow: ellipsis;white-space: nowrap;}
.shop-title-text{font-size:16px;}
.shop-left image{width:190rpx;height:190rpx;margin:10px;}
.shop-item{display: flex;flex-direction: row;border-bottom:1px solid #ccc;}
.shop-right{display: flex;flex-direction: column;justify-content: space-between;margin:10px 10px 10px 0;width:calc(100vw - 250rpx)}
.shop-name{font-weight: bold;color:#000;font-size:28rpx;}
.shop-item text{font-size:26rpx;}
.distince{font-size:26rpx;}
.shop-score{display: flex;flex-direction: row;align-items: center;}
.shop-score .image{width: 32rpx; height: 32rpx; margin-left: 8rpx; margin-top: 5rpx;}
.shop-score .image image{width: 100%; height: 100%; }